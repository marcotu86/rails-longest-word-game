
<h1>Games#new</h1>
<% @letters.each do |letter|%>
<button type="button" class="btn btn-primary" disabled><%= letter%></button>
<% end %>
<p>Find me in app/views/games/new.html.erb</p>

<form action="/score" method="post" data-turbo="false" >
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input type="text" name="answer" placeholder="write your word here?">
  <input type="submit" value = "Play">
  <%= hidden_field_tag :letters, @letters %>
</form>
